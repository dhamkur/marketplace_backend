<div class="mb-3">
  <label class="form-label">Name</label>
  <%= f.text_field :name, class: "form-control" %>
</div>

<div class="mb-3">
  <label class="form-label">Description</label>
  <%= f.text_area :description, class: "form-control", rows: 5 %>
</div>

<div class="mb-3">
  <label class="form-label">Starting Price</label>
  <%= f.number_field :starting_price, class: "form-control", min: 1 %>
</div>

<div class="mb-3">
  <label class="form-label">Delivery Fee</label>
  <%= f.number_field :delivery_fee, class: "form-control", min: 0 %>
</div>

<div class="mb-3">
  <label class="form-label">Category</label>
  <%= f.select(:category_id, options_for_select(Product::STATUS.map {|status| [status.humanize, status]}, f.object.status),
      { include_blank: "Select Category" }, { class: "form-control" }) %>
</div>

<div class="mb-3">
  <label class="form-label">Status</label>
  <%= f.select(:status, options_for_select(Product::STATUS.map {|status| [status.humanize, status]}, f.object.status),
      { include_blank: "Select Status" }, { class: "form-control" }) %>
</div>
