<div class="row">
  <div class="col-3">
    <%= render "shared/merchant/sidebar" %>
  </div>
  <div class="col-9">
    <div class="d-flex">
      <%= search_form_for @search, url: merchants_orders_path, html: { class: "me-auto" }, data: { turbo_frame: "tables",
          turbo_stream: true, controller: "form", form_target: "source" } do |f| %>
        <div class="mb-3">
          <%= f.search_field :code_cont, class: "form-control", placeholder: "Search order code",
              data: { action: "input->form#search" } %>
        </div>
      <% end %>
    </div>
    <%= render "lists" %>
  </div>
</div>
