<section id="detail-product">
  <div class="row">
    <div class="col-9">
      <div class="row">
        <div class="col-6">
          <%= image_tag("placeholder_600_400.svg", class: "rounded", style: "width: 100%; height: 100%;") %>
        </div>
        <div class="col-6">
          <h2><%= @object.name %></h2>
          <% @object.variants.each do |variant| %>
            <div class="form-check form-check-inline" data-controller="variant">
              <input class="form-check-input"
                type="radio"
                name="variant"
                value="<%= variant.id %>"
                id="variant-<%= variant.id %>"
                data-variant-target="name"
                data-price="<%= variant.amount %>"
                data-stock="<%= variant.stock %>"
                data-action="input->variant#select" />
              <label class="form-check-label" for="variant-<%= variant.id %>"><%= variant.name %></label>
            </div>
          <% end %>

          <div id="collapse-variant" class="d-none mt-1">
            Price: <span id="variant-price">$0</span>
            <br/>
            Stock: <span id="variant-stock">0</span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-3">
      <div class="card">
        <div class="card-body">
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Quantity</label>
            <input type="number" name="quantity" min="1" class="form-control" value="1" />
            <input type="hidden" name="variant_id" />
            <input type="hidden" name="product_id" />
          </div>

          <div class="d-grid">
            <button type="button" class="btn btn-primary">Add to Cart</button>
          </div>
        </div>
      </div>
    </div>
    <div class="col-12 mt-5">
      <p><%= @object.description %></p>
    </div>
  </div>
</section>
