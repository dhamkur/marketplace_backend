<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container">
    <%= link_to "MARKETPLACE", root_header, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-content" aria-controls="navbar-content" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbar-content">
      <% unless merchant_signed_in? || admin_signed_in? %>
        <%= form_with url: products_path, html: { method: :get, class: "d-flex me-auto" },
            data: { turbo_frame: "tables", turbo_stream: true, turbo_action: "advance",
            controller: "form", form_target: "source" } do |f| %>
          <input class="form-control me-2" name="q[name_cont]" type="search" placeholder="Search" />
          <button class="btn btn-outline-success" type="submit">Search</button>
        <% end %>
      <% else %>
        <div class="d-flex m-auto"></div>
      <% end %>
      <ul class="navbar-nav mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to "Products", product_header, class: "nav-link" %>
        </li>

        <% if user_signed_in? %>
          <%= render "shared/user/nav" %>
        <% elsif admin_signed_in? %>
          <%= render "shared/admin/nav" %>
        <% elsif merchant_signed_in? %>
          <%= render "shared/merchant/nav" %>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
