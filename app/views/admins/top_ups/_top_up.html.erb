<tr id="<%= dom_id(top_up) %>">
  <td><%= top_up.code %></td>
  <td><%= money(top_up.amount) %></td>
  <td>
    <span class="badge rounded-pill <%= transaction_status(top_up.status) %>">
      <%= top_up.status.humanize %>
    </span>
  </td>
  <td><%= date_time(top_up.created_at) %></td>
  <td>
    <div class="dropdown">
      <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown"
        style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;"
      >
        Action
      </button>
      <ul class="dropdown-menu">
        <li>
          <%= link_to "Detail", admins_top_up_path(top_up),
              class: "dropdown-item", data: { turbo_frame: "modal" } %>
        </li>
        <li>
          <%= link_to "Reject", admins_top_up_path(top_up, status: "rejected"),
              class: "dropdown-item", data: { turbo_method: :put,
                turbo_confirm: "Are you sure you want to reject this Top Up?"
              } unless top_up.status == "rejected" %>
        </li>
        <li>
          <%= link_to "Cancel", admins_top_up_path(top_up, status: "canceled"),
              class: "dropdown-item", data: { turbo_method: :put,
                turbo_confirm: "Are you sure you want to cancel this Top Up?"
              } unless top_up.status == "canceled" %>
        </li>
        <li>
          <%= link_to "Complete", admins_top_up_path(top_up, status: "completed"),
              class: "dropdown-item", data: { turbo_method: :put,
                turbo_confirm: "Are you sure you want to complete this Top Up?"
              } unless top_up.status == "completed" %>
        </li>
      </ul>
    </div>
  </td>
</tr>
