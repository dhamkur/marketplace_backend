<% content_for :modal_content do %>
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">Detail Promotion</h5>
      <button type="button" class="btn-close" data-action="modal#hideModal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
      <table class="table table-borderless">
        <tr>
          <th>ID</th>
          <td>:</td>
          <td><%= @object.id %></td>
        </tr>
        <tr>
          <th>Code</th>
          <td>:</td>
          <td><%= @object.code %></td>
        </tr>
        <tr>
          <th>Name</th>
          <td>:</td>
          <td><%= @object.name %></td>
        </tr>
        <tr>
          <th>Type</th>
          <td>:</td>
          <td><%= @object.promo_type.humanize %></td>
        </tr>
        <tr>
          <th>Amount</th>
          <td>:</td>
          <td><%= money(@object.amount) %></td>
        </tr>
        <tr>
          <th>Created At</th>
          <td>:</td>
          <td><%= date_time(@object.created_at) %></td>
        </tr>
        <tr>
          <th>Updated At</th>
          <td>:</td>
          <td><%= date_time(@object.updated_at) %></td>
        </tr>
      </table>
    </div>
  </div>
<% end %>

<%= render "shared/modal", modal_dialog: "modal-dialog-centered" %>
