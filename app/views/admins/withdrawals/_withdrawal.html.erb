<tr id="<%= dom_id(withdrawal) %>">
  <td><%= withdrawal.code %></td>
  <td><%= money(withdrawal.amount) %></td>
  <td><%= withdrawal.status.try(:humanize) %></td>
  <td><%= date_time(withdrawal.created_at) %></td>
  <td>
    <div class="dropdown">
      <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown"
        style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;"
      >
        Action
      </button>
      <ul class="dropdown-menu">
        <li>
          <%= link_to "Detail", admins_withdrawal_path(withdrawal),
              class: "dropdown-item", data: { turbo_frame: "modal" } %>
        </li>
        <li>
          <%= link_to "Completed", admins_withdrawal_path(withdrawal),
              class: "dropdown-item", data: { turbo_method: :put,
                turbo_confirm: "Are you sure you want to complete this Withdrawal?"
              } unless withdrawal.status == "completed" %>
        </li>
      </ul>
    </div>
  </td>
</tr>
