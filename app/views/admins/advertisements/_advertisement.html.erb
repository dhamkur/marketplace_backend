<tr id="<%= dom_id(advertisement) %>">
  <td><%= advertisement.name %></td>
  <td><%= advertisement.page_type.humanize %></td>
  <td><%= money(advertisement.starting_price) %></td>
  <td><%= advertisement.is_available ? "Yes" : "No" %></td>
  <td><%= date_time(advertisement.created_at) %></td>
  <td>
    <div class="dropdown">
      <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown"
        style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;"
      >
        Action
      </button>
      <ul class="dropdown-menu">
        <li>
          <%= link_to "Detail", admins_advertisement_path(advertisement),
              class: "dropdown-item", data: { turbo_frame: "modal" } %>
        </li>
        <li>
          <%= link_to "Edit", edit_admins_advertisement_path(advertisement),
              class: "dropdown-item", data: { turbo_frame: "modal" } %>
        </li>
        <li>
          <%= link_to "Delete", admins_advertisement_path(advertisement),
              class: "dropdown-item", data: { turbo_method: :delete,
              turbo_confirm: "Are you sure?" } %>
        </li>
      </ul>
    </div>
  </td>
</tr>
