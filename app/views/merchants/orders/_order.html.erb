<tr>
  <td><%= order.code %></td>
  <td>
    <span class="badge rounded-pill <%= transaction_status(order.status) %>">
      <%= order.status.humanize %>
    </span>
  </td>
  <td><%= money(order.total_payment) %></td>
  <td><%= date_time(order.created_at) %></td>
  <td><%= date_time(order.updated_at) %></td>
  <td>
    <div class="dropdown">
      <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown"
        style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;"
      >
        Action
      </button>
      <ul class="dropdown-menu">
        <li>
          <%= link_to "Detail", merchants_order_path(order),
              class: "dropdown-item", data: { turbo: false } %>
        </li>
      </ul>
    </div>
  </td>
</tr>
