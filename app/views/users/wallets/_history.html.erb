<tr id="<%= dom_id(history) %>">
  <td><%= history.code %></td>
  <td><%= money(history.amount) %></td>
  <td><%= history.status.humanize %></td>
  <td><%= history.created_at %></td>
  <td>
    <div class="dropdown">
      <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown"
        style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;"
      >
        Action
      </button>
      <ul class="dropdown-menu">
        <li>
          <%= link_to "Detail", users_wallet_path(history),
              class: "dropdown-item", data: { turbo_frame: "modal" } %>
        </li>

        <% if history.history_type == "top_up" %>
          <li>
            <%= link_to "Upload Proof of Transfer", users_wallet_path(history, type: "proof_of_transfer"),
                class: "dropdown-item", data: { turbo_frame: "modal" } %>
          </li>

          <% if history.status == "pending" %>
            <li><a class="dropdown-item" href="#">Cancel</a></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </td>
</tr>
