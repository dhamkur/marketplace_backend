<% if params[:type] == "bank" %>
  <% action = params[:action] == "new" ? User::Bank.new : @object %>
  <%= form_for(action, url: url, data: { turbo: false }) do |f| %>
    <div class="mb-3">
      <label class="form-label">Account Holder</label>
      <%= f.text_field :account_holder, class: "form-control" %>
    </div>
    <div class="mb-3">
      <label class="form-label">Account Number</label>
      <%= f.text_field :account_number, class: "form-control" %>
    </div>
    <div class="mb-3">
      <label class="form-label">Bank</label>
      <%= f.select(:bank_id, options_for_select(Bank.all.order(name: :asc).map {|bank| [bank.name, bank.id]}, f.object.bank_id),
          { include_blank: "Select Bank" }, { class: "form-control" }) %>
    </div>

    <div class="d-grid"><%= f.submit "Save", class: "btn btn-primary" %></div>
  <% end %>
<% end %>

<% if params[:type] == "address" %>
  <% action = params[:action] == "new" ? User::Address.new : @object %>
  <%= form_for(action, url: url, data: { turbo: false }) do |f| %>
    <div class="mb-3">
      <label class="form-label">Label</label>
      <%= f.text_field :label, class: "form-control" %>
    </div>
    <div class="mb-3">
      <label class="form-label">Receiver</label>
      <%= f.text_field :receiver, class: "form-control" %>
    </div>
    <div class="mb-3">
      <label class="form-label">Phone Number</label>
      <%= f.telephone_field :phone_number, class: "form-control" %>
    </div>
    <div class="mb-3">
      <label class="form-label">Address</label>
      <%= f.text_area :address, class: "form-control", rows: 5 %>
    </div>
    <div class="mb-3">
      <label class="form-label">Country</label>
      <%= f.country_select :country, { format: :with_data_attrs, priority_countries: ["ID"],
          selected: f.object.country, include_blank: "Select Country" },
          { class: "form-control", required: true } %>
    </div>
    <div class="mb-3">
      <label class="form-label">State</label>
      <%= f.text_field :state, class: "form-control" %>
    </div>
    <div class="mb-3">
      <label class="form-label">City</label>
      <%= f.text_field :city, class: "form-control" %>
    </div>
    <div class="mb-3">
      <label class="form-label">Zip Code</label>
      <%= f.text_field :zip_code, class: "form-control" %>
    </div>
    <div class="mb-3 form-check">
      <%= f.check_box :is_default, class: "form-check-input" %>
      <%= f.label :is_default, "Default Address", class: "form-check-label" %>
    </div>

    <div class="d-grid"><%= f.submit "Save", class: "btn btn-primary" %></div>
  <% end %>
<% end %>
