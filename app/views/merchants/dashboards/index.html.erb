<div class="row">
  <div class="col-3">
    <%= render "shared/merchant/sidebar" %>
  </div>
  <div class="col-9">
    <div class="row">
      <div class="col-4">
        <div class="card">
          <div class="card-body">
            <h6 class="font-weight-bold">Wallet</h6>
            <%= money(current_merchant&.wallet&.amount || 0) %>
          </div>
        </div>
      </div>

      <div class="col-4">
        <div class="card">
          <div class="card-body">
            <h6 class="font-weight-bold">Total Products</h6>
            <%= current_merchant.products.size %>
          </div>
        </div>
      </div>

      <div class="col-4">
        <div class="card">
          <div class="card-body">
            <h6 class="font-weight-bold">Total Orders</h6>
            <%= @orders.size %>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-3 mb-3">
      <h5>Latest Orders</h5>
    </div>

    <% if @orders.present? %>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Code</th>
              <th>Status</th>
              <th>Total Payment</th>
              <th>Created At</th>
              <th>Updated At</th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "order", collection: @orders.limit(10) %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center">
        <h1>Data Not Found</h1>
      </div>
    <% end %>
  </div>
</div>
