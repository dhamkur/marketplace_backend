<div class="placements-form-wrapper" data-new-record="<%= f.object.new_record? %>">
  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <div class="row">
          <div class="col-4">
            <label>Name</label>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="col-4">
            <label>Price</label>
            <%= f.number_field :amount, class: "form-control" %>
          </div>
          <div class="col-4">
            <label>Duration</label>
            <%= f.number_field :duration, class: "form-control" %>
          </div>
        </div>
        <br/>
        <div class="row">
          <div class="col-6">
            <label>Image</label>
            <%= f.file_field :image, class: "form-control" %>
          </div>
          <div class="col-6">
            <label>Available Slot</label>
            <div class="input-group">
              <%= f.hidden_field :_destroy %>
              <%= f.number_field :available_slot, class: "form-control" %>
              <button type="button" class="btn btn-danger btn-sm" data-action="nested-form#remove">Remove</button>
            </div>
          </div>
        </div>

        <% if f.object.image.present? %>
          <div class="text-center mt-3">
            <%= image_tag(f.object.image.url, class: "img-fluid", style: "width: 100%; height: 100%;") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
